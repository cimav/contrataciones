=form_for @candidate do |f|
  .row.form-group
    =f.label :name, 'Nombre completo:', class:'control-label col-md-2'
    .col-md-10
      =f.text_field :name, class:'form-control'
  .row.form-group
    =f.label :degree, 'Título Académico:', class:'control-label col-md-2'
    .col-md-10
      =f.text_field :degree, class:'form-control'
  .row.form-group
    =f.label :sni, 'SNI:', class:'control-label col-md-2'
    .col-md-10
      =f.select :sni, [['Ninguno'],['I'],['II'],['III']] , class:'form-control'
  .row.form-group
    =f.label :department_id, 'Departamento:', class:'control-label col-md-2'
    .col-md-10
      =f.collection_select(:department_id, Department.all, :id, :name, class:'form-control')
      =link_to '+','#', class:'btn btn-default'
  .row.form-group
    =f.label :function, 'Actividades que realizará:', class:'control-label col-md-2'
    .col-md-10
      =f.text_area :function, class:'form-control'
  .row.form-group
    =f.label :curriculum, 'Curriculum:', class:'control-label col-md-2'
    .col-md-10
      =f.file_field  :curriculum, class:'btn btn-default'
  .row
    .col-md-10
    .col-md-2
      =f.submit 'Guardar',class:'btn btn-success'
      -if request.path_info.include?('edit')
        = link_to "Eliminar", @candidate,method: :delete, class:'btn btn-danger'
